{
  "name": "sniffler-renderer",
  "version": "1.0.0",
  "main": "src/main.jsx",
  "private": true,
  "scripts": {
    "start": "npm run build && npx serve dist -l 8765",
    "dev": "npm run build && concurrently \"npm run build:css:watch\" \"npm run build:js:watch\" \"npm run serve\"",
    "build:css": "npx tailwindcss -i ./src/index.css -o ./dist/tailwind.css",
    "build:css:watch": "npx tailwindcss -i ./src/index.css -o ./dist/tailwind.css --watch",
    "build:js": "npx esbuild src/main.jsx --bundle --outfile=dist/index.js --format=iife --global-name=App --loader:.jsx=jsx --jsx=automatic",
    "build:js:watch": "npx esbuild src/main.jsx --bundle --outfile=dist/index.js --format=iife --global-name=App --loader:.jsx=jsx --jsx=automatic --watch",
    "build": "npm run build:css && npm run build:js && npm run copy:html",
    "copy:html": "copy index.html dist\\index.html /Y",
    "serve": "npx serve dist -l 8765"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lucide-react": "^0.541.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "serve": "^14.2.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "esbuild": "^0.24.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12"
  },
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
